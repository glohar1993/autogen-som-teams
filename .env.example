# Microsoft AutoGen Assignments - Environment Variables

# =============================================================================
# AI MODEL CONFIGURATION
# =============================================================================

# OpenAI Configuration (Primary)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_TEMPERATURE=0.1
OPENAI_MAX_TOKENS=4000

# Alternative AI Providers (Optional)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
GOOGLE_API_KEY=your_google_api_key_here
AZURE_OPENAI_API_KEY=your_azure_openai_key_here
AZURE_OPENAI_ENDPOINT=your_azure_endpoint_here

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# SQLite (Default - No setup required)
DATABASE_URL=sqlite:///./autogen_assignments.db

# PostgreSQL (Production)
# DATABASE_URL=postgresql://username:password@localhost:5432/autogen_db

# MongoDB (Optional for Assignment 1)
MONGODB_URI=mongodb://localhost:27017/autogen_assignments
MONGODB_DATABASE=autogen_assignments

# =============================================================================
# ASSIGNMENT 0 - SOM TEAMS CONFIGURATION
# =============================================================================

# Team Configuration
MAX_INNER_TEAMS=5
MAX_AGENTS_PER_TEAM=10
HUMAN_INTERVENTION_TIMEOUT=300  # seconds
AUTO_APPROVE_THRESHOLD=0.8

# =============================================================================
# ASSIGNMENT 1 - ATS RESUME SYSTEM CONFIGURATION
# =============================================================================

# File Processing
MAX_FILE_SIZE_MB=5
SUPPORTED_FORMATS=pdf,docx,txt,rtf
UPLOAD_DIRECTORY=./uploads
PROCESSED_DIRECTORY=./processed

# Scoring Configuration
SKILLS_WEIGHT=0.30
EXPERIENCE_WEIGHT=0.25
EDUCATION_WEIGHT=0.15
FORMAT_WEIGHT=0.15
KEYWORDS_WEIGHT=0.15

# Performance Thresholds
MAX_PROCESSING_TIME=30  # seconds
MAX_SCORING_TIME=10     # seconds
MAX_DB_QUERY_TIME=2     # seconds
MAX_UI_RESPONSE_TIME=3  # seconds

# RAG System Configuration
EMBEDDING_MODEL=text-embedding-ada-002
VECTOR_DB_TYPE=faiss  # Options: faiss, chroma, pinecone
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
TOP_K_RETRIEVAL=5

# =============================================================================
# STREAMLIT CONFIGURATION
# =============================================================================

# Streamlit App Settings
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=localhost
STREAMLIT_THEME_PRIMARY_COLOR=#FF6B6B
STREAMLIT_THEME_BACKGROUND_COLOR=#FFFFFF
STREAMLIT_THEME_SECONDARY_BACKGROUND_COLOR=#F0F2F6

# =============================================================================
# EXTERNAL SERVICES (OPTIONAL)
# =============================================================================

# Job Board APIs (for bonus features)
INDEED_API_KEY=your_indeed_api_key_here
LINKEDIN_API_KEY=your_linkedin_api_key_here
GLASSDOOR_API_KEY=your_glassdoor_api_key_here

# Email Service (for notifications)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here

# =============================================================================
# DEVELOPMENT AND DEBUGGING
# =============================================================================

# Environment
ENVIRONMENT=development  # Options: development, staging, production
DEBUG=True
LOG_LEVEL=INFO

# Testing
TEST_DATABASE_URL=sqlite:///./test_autogen_assignments.db
PYTEST_TIMEOUT=300

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Session Management
SECRET_KEY=your_secret_key_here_change_in_production
SESSION_TIMEOUT=3600  # seconds

# File Security
ALLOWED_EXTENSIONS=pdf,docx,txt,rtf
SCAN_UPLOADS=True
MAX_CONCURRENT_UPLOADS=10

# =============================================================================
# PERFORMANCE AND SCALING
# =============================================================================

# Caching
CACHE_TYPE=memory  # Options: memory, redis, memcached
CACHE_TIMEOUT=3600  # seconds

# Concurrency
MAX_WORKERS=4
ASYNC_TIMEOUT=60

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# =============================================================================
# MONITORING AND ANALYTICS
# =============================================================================

# Logging
LOG_FILE=./logs/autogen_assignments.log
LOG_ROTATION=daily
LOG_RETENTION_DAYS=30

# Metrics
ENABLE_METRICS=True
METRICS_ENDPOINT=/metrics

# =============================================================================
# BACKUP AND RECOVERY
# =============================================================================

# Database Backup
BACKUP_ENABLED=True
BACKUP_SCHEDULE=daily
BACKUP_RETENTION_DAYS=7
BACKUP_LOCATION=./backups

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Assignment 0 Features
ENABLE_INNER_TEAMS=True
ENABLE_OUTER_TEAMS=True
ENABLE_HUMAN_INTERVENTION=True
ENABLE_TEAM_COORDINATION=True

# Assignment 1 Features
ENABLE_BATCH_PROCESSING=True
ENABLE_API_INTEGRATION=True
ENABLE_ADVANCED_ANALYTICS=True
ENABLE_MOBILE_RESPONSIVE=True
ENABLE_AI_REWRITING=True

# =============================================================================
# INSTRUCTIONS FOR SETUP
# =============================================================================

# 1. Copy this file to .env
# 2. Replace all "your_*_here" values with actual credentials
# 3. Adjust configuration values based on your needs
# 4. Never commit .env file to version control
# 5. Use different .env files for different environments

# =============================================================================
# SECURITY NOTES
# =============================================================================

# - Keep API keys secure and never share them
# - Use environment-specific configurations
# - Regularly rotate API keys and secrets
# - Use strong, unique secret keys for production
# - Enable proper logging and monitoring in production
